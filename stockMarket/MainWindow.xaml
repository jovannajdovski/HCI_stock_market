            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />

            </Grid.RowDefinitions>

            <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6"  Name="TextBox1" HorizontalAlignment="Center"   TextWrapping="Wrap" MaxWidth="400"
                     VerticalAlignment="Bottom" Width="180" materialDesign:HintAssist.Hint="Search"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     TextChanged="TextBox_TextChanged" LostFocus="TextBox_OnFocusLost" Foreground="White" Background="#FF5E6266"/>
            
            <ListBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" Name="AutocompleteListBox"  HorizontalAlignment="Center" VerticalAlignment="Top"
                     Width="180" MaxHeight="200" Visibility="Visible" SelectionChanged="AutocompleteListBox_SelectionChanged"
                     />
            <RadioButton Grid.ColumnSpan="7" Grid.Column="1"
                Content="Crypto"
                IsChecked="True"
                Style="{StaticResource MaterialDesignRadioButton}" HorizontalAlignment="Left" GroupName="Type" Foreground="#FFCCCCCC" />
            <RadioButton Grid.Row="1" Grid.ColumnSpan="7" Grid.Column="1"
                         Content="Stock"
                         IsChecked="False"
                         Style="{StaticResource MaterialDesignRadioButton}" HorizontalAlignment="Left" GroupName="Type" Foreground="#FFCCCCCC"/>

            <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"  Background="#FF5B708F" Click="Button_Click_1" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Foreground="White"/>
                    <TextBlock Text="Refresh" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="3"  Background="#FF8F625B" Width="130" Height="40"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_2" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Garbage" Foreground="White"/>
                    <TextBlock Text="Remove All" Foreground="White"/>
                </StackPanel>
            </Button>


            




        </Grid>
        <DataGrid Grid.Row="1" Grid.Column="1"
                              CanUserAddRows="False"
                              ItemsSource="{Binding Stocks}"
                              SelectionMode="Extended"
                              SelectionUnit="Cell"  AutoGeneratingColumn="OnAutoGeneratingColumn" GridLinesVisibility="All" />
