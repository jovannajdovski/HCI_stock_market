<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="stockMarket.MainWindow"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="StockMarket" Height="650" Width="1000"
        Name="window"
        MouseDown="window_MouseDown">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>




        <Grid Background="#222" Name="StockMarket" Grid.RowSpan="2" Grid.Column="0">

            <TextBox
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" />
            <TextBox Name="TextBox1" HorizontalAlignment="Center" Margin="0,192,0,0"  TextWrapping="Wrap" MaxWidth="400"
                     VerticalAlignment="Top" Width="180" materialDesign:HintAssist.Hint="Search"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     TextChanged="TextBox_TextChanged" LostFocus="TextBox_OnFocusLost" Foreground="White" Background="#FF5E6266"/>
            
            <ListBox Name="AutocompleteListBox" Margin="0,235,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                     Width="180" MaxHeight="200" Visibility="Visible" SelectionChanged="AutocompleteListBox_SelectionChanged"
                     />
            <RadioButton
                Content="Crypto"
                IsChecked="True"
                Style="{StaticResource MaterialDesignRadioButton}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" GroupName="Type" Foreground="#FFCCCCCC" />
            <RadioButton
                Content="Stock"
                IsChecked="False"
                Style="{StaticResource MaterialDesignRadioButton}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" GroupName="Type" Foreground="#FFCCCCCC"/>

            <Button  Background="#FF5B708F" Click="Button_Click_1" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-150,500,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Foreground="White"/>
                    <TextBlock Text="Refresh" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button  Background="#FF8F625B" Width="130" Height="40"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="150,500,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Garbage" Foreground="White"/>
                    <TextBlock Text="Remove All" Foreground="White"/>
                </StackPanel>
            </Button>

            
 




        </Grid>
        <DataGrid Grid.Row="1" Grid.Column="1" 
                ItemsSource="{Binding Stocks}" AutoGenerateColumns="False"
                Margin="5" Background="#212121" Name="stocksGrid"
                HorizontalGridLinesBrush="#FFFFFF" VerticalGridLinesBrush="#FFFFFF"
                BorderBrush="#FFFFFF" BorderThickness="2" IsReadOnly="True"
                VerticalScrollBarVisibility="Hidden" HeadersVisibility="Column" RowHeight="30">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="DateTime" Binding="{Binding DateTime, StringFormat=\{0:HH:mm:ss dd.MM.yyyy. \}}" Width="7*"/>
                    <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="3*"/>
                    <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="3*"/>
                    <DataGridTextColumn Header="Open" Binding="{Binding Open}" Width="3*"/>
                    <DataGridTextColumn Header="Close" Binding="{Binding Close}" Width="3*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="5*"/>
                </DataGrid.Columns>
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                   Color="#a8a8a8"/>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Background" Value="#212121"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="TextBlock.TextAlignment" Value="Center"></Setter>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#5E6266"/>
                        <Setter Property="Foreground" Value="#212121"/>
                        <Setter Property="BorderBrush" Value="#FFFFFF"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"></Setter>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

            </DataGrid>


        
        
    </Grid>

</Window>
